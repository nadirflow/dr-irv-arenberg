<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#000000</item>
        <item name="android:datePickerDialogTheme">@style/Dialog.Theme</item>
        <item name="android:timePickerDialogTheme">@style/Dialog.Theme</item>
    </style>

    <style name="Dialog.Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#6762AC</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="AppTheme.Green" parent="PayumoneyAppTheme">
        <item name="colorPrimary">@color/payumoney_primary</item>
        <item name="colorPrimaryDark">@color/payumoney_primary_dark</item>
        <item name="colorAccent">@color/payumoney_primary</item>
        <item name="colorButtonNormal">@color/payumoney_primary</item>
        <item name="alertDialogTheme">@style/Dialog.Theme</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

</resources>
